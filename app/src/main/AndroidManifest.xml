<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kelompok8.Bookuku">

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />



    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.kelompok8.Bookuku.MainActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.kelompok8.Bookuku.Login"
            android:label="Sign In">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.kelompok8.Bookuku.AddPost"
            android:parentActivityName="com.kelompok8.Bookuku.MainActivity"/>
        <activity android:name="com.kelompok8.Bookuku.DetailPost"
            android:parentActivityName="com.kelompok8.Bookuku.MainActivity"/>
    </application>

</manifest>